@model TezSepeti.Models.UserModel
@{
    UserModel UserDetail = ViewBag.UserDetail;
                <div class="page-wrapper">
                    <!-- ============================================================== -->
                    <!-- Container fluid  -->
                    <!-- ============================================================== -->
                    <div class="container-fluid">
                        <!-- ============================================================== -->
                        <!-- Bread crumb and right sidebar toggle -->
                        <!-- ============================================================== -->
                        <div class="row page-titles">
                            <div class="col-md-5 align-self-center">
                                <h4 class="text-themecolor">Profil</h4>
                            </div>                       
                        </div>
                        <!-- ============================================================== -->
                        <!-- End Bread crumb and right sidebar toggle -->
                        <!-- ============================================================== -->
                        <!-- ============================================================== -->
                        <!-- Start Page Content -->
                        <!-- ============================================================== -->
                        <!-- Row -->
                        <div class="row">
                            <!-- Column -->
                            <div class="col-lg-4 col-xlg-3 col-md-5">
                                <div class="card">
                                    <div class="card-body">
                                        <center class="m-t-30">
                                            <img src="~/Uploads/@UserDetail.imageName" class="img-circle" width="150" />
                                            <h4 class="card-title m-t-10">@UserDetail.name</h4>
                                            <h6 class="card-subtitle">@UserDetail.lastName</h6>
                                            <div class="row text-center justify-content-md-center">
                                                
                                            </div>
                                        </center>
                                    </div>
                                    <div>
                                        <hr>
                                    </div>
                                    <div class="card-body">
                                        <small class="text-muted">E-Posta </small>
                                        <h6>@UserDetail.email</h6> <small class="text-muted p-t-30 db">Telefon</small>
                                                                 <h6>@UserDetail.phone</h6>
                                    </div>
                                </div>
                            </div>
                            <!-- Column -->
                            <!-- Column -->
                            <div class="col-lg-8 col-xlg-9 col-md-7">
                                <div class="card">
                                    <!-- Nav tabs -->
                                    <ul class="nav nav-tabs profile-tab" role="tablist">
                                        <li class="nav-item"> <a class="nav-link active" data-toggle="tab" href="#settings" role="tab">Ayarlar</a> </li>
                                    </ul>
                                    <!-- Tab panes -->
                                    <div class="tab-content">
                                       <div class="tab-pane active" id="settings" role="tabpanel">
                                            <div class="card-body">                                             
                                                    <div class="form-group">
                                                        <label class="col-md-12">Ad</label>
                                                        <div class="col-md-12">
                                                            <input type="text" asp-for="name" placeholder="@UserDetail.name" class="form-control form-control-line">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="example-email" class="col-md-12">Soyad</label>
                                                        <div class="col-md-12">
                                                            <input type="email" asp-for="lastName"  placeholder="@UserDetail.lastName" class="form-control form-control-line">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="col-md-12">Telefon</label>
                                                        <div class="col-md-12">
                                                            <input type="text" asp-for="phone"  placeholder="@UserDetail.phone" class="form-control form-control-line">
                                                        </div>
                                                    </div>    
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Column -->
                        </div>
                        <!-- Row -->
                        <!-- ============================================================== -->
                        <!-- End PAge Content -->
                        <!-- ============================================================== -->
                        <!-- ============================================================== -->
                        
                        <!-- ============================================================== -->
                    </div>
                    <!-- ============================================================== -->
                    <!-- End Container fluid  -->
                    <!-- ============================================================== -->
                </div> }
